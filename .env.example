PORT=5000
NODE_ENV=development

# Database Configuration
# For Local SQLite
DB_CLIENT=better-sqlite3
DB_PATH=./database/crm_database.db

# For Remote Database (e.g., Aiven Postgres/MySQL)
# DB_CLIENT=pg  # or mysql2
# DB_HOST=dataentry-dataentry.j.aivencloud.com
# DB_PORT=
# DB_USER=
# DB_PASSWORD=
# DB_NAME=
# DB_SSL=true

JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_EXPIRY=15m
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_change_in_production_min_32_chars
REFRESH_TOKEN_EXPIRY=7d

# Frontend URL(s) for CORS (comma separated)
FRONTEND_URL=http://localhost:5173,https://your-frontend-domain.vercel.app

LOGIN_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_WINDOW=15

LOG_LEVEL=info
